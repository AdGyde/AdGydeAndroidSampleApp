<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:id="@+id/img"
        android:src="@mipmap/adgyde"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvadgyde"
        android:layout_marginBottom="7dp"
        android:text="@string/t1"
        android:textColor="#FF080808"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/img"/>

    <LinearLayout
        android:id="@+id/ll_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/tvadgyde"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Year - "
            android:textColor="#000"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/et_usr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="#000"
            android:textSize="16dp"
            android:hint="1991"
            android:textColorHint="#ccd"
            android:layout_marginLeft="10dp"
            android:maxLength="4"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/txt_usr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="#000"
            android:textSize="16dp"
            android:text=""
            android:textColorHint="#ccd"
            android:layout_marginLeft="10dp"
            android:maxLength="4"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="years"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_age"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender - "
            android:textColor="#000"
            android:textSize="16dp"
            />
        <Spinner
            android:id="@+id/et_usr_gender"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:textColor="#000"
            android:textSize="16dp"
            android:hint="Male"
            android:textColorHint="#ccd"
            />
        <TextView
            android:id="@+id/txt_usr_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="#000"
            android:textSize="16dp"
            android:textColorHint="#ccd"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/usr_submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:padding="5dp"
        android:layout_below="@id/gender"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:textSize="18dp"
        android:textStyle="bold"
        />

</RelativeLayout>