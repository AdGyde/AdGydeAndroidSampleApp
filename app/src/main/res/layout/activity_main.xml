<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:id="@+id/img"
            android:src="@mipmap/adgyde"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvadgyde"
            android:layout_marginBottom="7dp"
            android:text="@string/t1"
            android:textColor="#FF080808"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/img"/>

        <TextView
            android:id="@+id/txt_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvadgyde"
            android:text="AdGyde Events"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_view"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/simple_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonshape"
                android:padding="10dp"
                android:text="Simple Event"
                android:textColor="#ffff" />


            <Button
                android:id="@+id/counting_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:padding="10dp"
                android:text="Counting Event"
                android:textColor="#ffff" />

            <Button
                android:id="@+id/Computing_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:padding="10dp"
                android:text="Computing Event"
                android:textColor="#ffff" />

            <Button
                android:id="@+id/unique_Event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:padding="10dp"
                android:text="Unique Event"
                android:textColor="#ffff" />

            <Button
                android:id="@+id/revenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:padding="10dp"
                android:text="Revenue"
                android:textColor="#ffff" />

            <Button
                android:id="@+id/demography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:padding="10dp"
                android:text="Demography"
                android:textColor="#ffff" />


        </LinearLayout>
    </RelativeLayout>
